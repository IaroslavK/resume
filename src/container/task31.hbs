{{!--
Це код container файлу для index сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/"
--}}
<main>
    <section class="col-12">
        {{#with navigation}}
        {{#each links}}
        <a href={{href}} class="btn btn-link col-2">{{text}}</a>
        {{/each}}
        {{#with button}}
        <a href={{href}} class="btn btn-primary col-2">{{text}}</a>
        {{/with}}
        {{/with}}
    </section>
    <br>
    <hr>
    <br>
    <section class="col-12">
        <div>
            {{#with header}}
            <h1>{{title}}</h1>
            <p>{{description}}</p>
            {{#with button}}
            <a href={{link}} class="btn btn-primary">{{text}}</a>
            {{/with}}
            {{/with}}
        </div>
    </section>
    <br>
    <hr>
    <br>
    <section class="col-12">
        <div class="row gx-2 gy-5">
            {{#with city}}
            <h2>{{title}}</h2>
            {{#each cards}}
            <div class="col-5">
                <div class="card">
                    {{#with picture}}
                    <img class="card-img-top" src={{src}} alt={{alt}}>
                    {{/with}}
                    <div class="card-body">
                        <h5 class="card-title ">{{title}}</h5>
                        <p>{{description}}</p>
                        {{#with button}}
                        <a href={{href}} class="btn btn-primary">{{text}}</a>
                        {{/with}}
                    </div>
                </div>
            </div>
            {{/each}}
            {{/with}}
        </div>
    </section>
    <br>
    <hr>
    <br>
    <section class="col-12">
        {{#with winner}}
        <h2>{{title}}</h2>
        <table class="table">
            {{#with table}}
            <thead>
                <tr>
                    {{#each head}}
                    <th>{{this}}</th>
                    {{/each}}
                </tr>
            </thead>
            <tbody>
                {{#each user}}
                <tr>
                    <th>{{place}}</th>
                    <td>{{name}}</td>
                    <td>{{surname}}</td>
                    <td>{{nickname}}</td>
                </tr>
                {{/each}}
            </tbody>
            {{/with}}
        </table>
        {{/with}}
    </section>
    <br>
    <hr>
    <br>
    <section class="col-12">
        <div class="row g-4">
            {{#with gallery}}
            <h2>{{title}}</h2>
            {{#each cards}}
            <div class="card col-4">
                <div class="card-header">
                    <div>{{name}}</div>
                </div>
                {{#each items}}
                <div class="list-group list-group-flush">
                    <div class="list-group-item">
                        <p>{{this}}</p>
                    </div>
                </div>
                {{/each}}
            </div>
            {{/each}}
            {{/with}}
        </div>
    </section>
    <br>
    <hr>
    <br>
    <section class="col-12">
        <div class="row gx-2 gy-4">
            {{#with relaxion}}
            <div class="display-3">{{title}}</div>
            {{#each cards}}
            <div class="col-5">
                <div class="card text-bg-secondary">
                    <div class="card-header text-center">{{header}}</div>
                    <div class="card-body text-center">
                        <h6 class="card-title">{{title}}</h6>
                        <p>{{description}}</p>
                    </div>
                </div>
            </div>
            {{/each}}
            {{/with}}
        </div>
    </section>
    <br>
    <hr>
    <br>
    <section class="col-12">
        <div class="row g-2">
            {{#with rest}}
            {{#each cards}}
            <div class="col-6">
                <div class="card text-bg-light">
                    <div class="card-header text-center">{{header}}</div>
                    <div class="card-body text-center">
                        <h6 class="card-title">{{title}}</h6>
                        <p>{{description}}</p>
                        <button class="btn btn-primary">{{button}}!</button>
                    </div>
                    <div class="card-footer text-center">{{footer}}</div>
                </div>
            </div>
            {{/each}}
            {{/with}}
        </div>
    </section>

    <hr>

    <section class="col-12">
        <div class="row gx-2 gy-5">
            {{#with proposition}}
            <div class="display-2">{{title}}</div>
            {{#each card}}
            <div class="col-5">
                <div class="card text-bg-warning">
                    <div class="card-header">{{header}}</div>
                    <div class="card-body">
                        <h6 class="card-title">{{title}}</h6>
                        <p>{{description}}</p>
                    </div>
                </div>
            </div>
            {{/each}}
            {{/with}}
        </div>
    </section>

    <hr>

    <section class="col-12">
        <div class="row gx-2 gy-5">
            {{#with footer}}
            <h5>{{title}}</h5>
            <div class="col-3">
                {{#each navigation}}
                <a href={{href}} class="btn btn-link">{{text}}</a>
                {{/each}}
            </div>
            <div class="col-3">
                {{#each socialMedia}}
                <a href={{link}} class="btn btn-outline-dark">{{name}}</a>
                {{/each}}
            </div>
            <div class="col-3">
                {{#each partners}}
                <a href={{link}} class="btn btn-outline-primary">{{name}}</a>
                {{/each}}
            </div>
            {{/with}}
        </div>
    </section>

</main>

