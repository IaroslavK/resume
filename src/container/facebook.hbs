{{!--
Це код container файлу для summary сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}


<div claas="col-12">
    <div class="row">
        <div class="card text-bg-primary">
            <div class="text-center">
                <h1>{{name}}</h1>
                <h2>Users</h2>
            </div>

            {{#each users}}

            <hr>
            <h3>ID: {{id}}</h3>
            <ul>
                <li>Name: <b>{{name}}</b></li>
                <li>Gender: <b>{{gender}}</b></li>
                <li>Age: <b>{{age}}</b></li>
                <li>Friends:
                    {{#each friends}}
                    <h4>ID: {{id}}</h4>
                    <ul>
                        <li>Name: <b>{{name}}</b></li>
                        <li>Gender: <b>{{gender}}</b></li>
                        <li>Age: <b>{{age}}</b></li>
                        <li>Mutual friends:
                            {{#each mutual_friends}}
                            <h5>ID: {{id}}</h5>
                            <ul>
                                <li>Name: <b>{{name}}</b></li>
                                <li>Gender: <b>{{gender}}</b></li>
                                <li>Age: <b>{{age}}</b></li>
                            </ul>
                            {{/each}}

                        </li>
                        {{#each groups}}
                        <li>Groups:


                            <h5>ID: {{id}}</h5>

                            <ul>
                                <li>Name: <b>{{name}}</b></li>
                                <li>Description: <b>{{description}}</b></li>
                                <li>Members:
                                    {{#each members}}
                                    <h6>ID: {{id}}</h6>
                                    <ul>
                                        <li>Name: <b>{{name}}</b></li>
                                        <li>Gender: <b>{{gender}}</b></li>
                                        <li>Age: <b>{{age}}</b></li>
                                    </ul>
                                    {{/each}}
                            </ul>

                        </li>
                        {{/each}}
                    </ul>
                    {{/each}}
                </li>
                {{#each groups}}
                <li>Groups:


                    <h5>ID: {{id}}</h5>

                    <ul>
                        <li>Name: <b>{{name}}</b></li>
                        <li>Description: <b>{{description}}</b></li>
                        <li>Members:
                            {{#each members}}
                            <h6>ID: {{id}}</h6>
                            <ul>
                                <li>Name: <b>{{name}}</b></li>
                                <li>Gender: <b>{{gender}}</b></li>
                                <li>Age: <b>{{age}}</b></li>
                            </ul>
                            {{/each}}
                    </ul>
                </li>
                {{/each}}
            </ul>
            {{/each}}
        </div>
    </div>
</div>

