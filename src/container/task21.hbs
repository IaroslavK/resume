{{!--
Це код container файлу для index сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/"
--}}
<br>

<head>
    <div class="card">
        <div class="card-body">
            {{#with heading}}
            <div class="card">
                {{#with main}}
                <div class="card-body">
                    <h1>{{title}}</h1>
                    <p>{{text}}</p>
                    {{#with button_text}}
                    <button class="btn btn-primary">{{solid}}</button>
                    <br>
                    <br>
                    <button class="btn btn-outline-primary text-capitalize">{{outline}}</button>
                    {{/with}}
                </div>
                {{/with}}
            </div>
        </div>
        <div class="card-body">
            {{#with second}}
            <div class="card">
                <div class="card-body">
                    <h2>{{title}}</h2>
                    <p>{{text}}</p>
                    {{#with button_text}}
                    <button class="btn btn-secondary">{{solid}}</button>
                    <br>
                    <br>
                    <button class="btn btn-outline-secondary">{{outline}}</button>
                    {{/with}}
                </div>
            </div>
            {{/with}}
        </div>
        <div class="card-body">
            {{#with subblock}}
            <div class="card">
                <div class="card-body">
                    <h3>{{title}}</h3>
                    <p>{{text}}</p>
                    {{#with button_text}}
                    <button class="btn btn-dark">{{solid}}</button>
                    <br>
                    <br>
                    <button class="btn btn-outline-dark">{{outline}}</button>
                    {{/with}}
                </div>
            </div>
            {{/with}}
        </div>
        {{/with}}
    </div>
</head>

<body>
    <br>
    <br>
    <div class="card">
        {{#with nested_display}}
        <div class="card-body">
            <div class="display-1">{{title}}</div>
            <div class="card-body">
                {{#with children_display}}
                <div class="card">
                    <div class="card-body">
                        <div class="display-4">{{title}}</div>
                        <p>{{text}}</p>
                        {{#with button}}
                        <button class="btn btn-outline-warning">{{text}}</button>
                        {{/with}}
                    </div>
                </div>
                {{/with}}
            </div>
            <div class="display-6">{{header_text}}</div>
            <br>
            {{#with button}}
            <button class="btn btn-info">{{text}}</button>
            {{/with}}
        </div>
        {{/with}}
    </div>
    <br>
    <br>
    <div class="card">
        <div class="card-body">
            {{#with paragraph}}
            <p class="text-uppercase">{{title}}</p>
            <p>{{text}}</p>
            {{#with button}}
            <button class="btn btn-link"><a href={{url}}>{{text}}</a></button>
            {{/with}}
            <div class="card">
                {{#each list_name}}
                <ul>
                    <li class="card-body">
                        <button class="btn btn-link"><a href={{url}}>{{text}}</a></button>
                    </li>
                </ul>
                {{/each}}
            </div>
            {{/with}}
        </div>
    </div>

</body>
