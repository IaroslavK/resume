<main class="p-5">
    <div class="col-12">
        <div class="row">

            {{>shopheader}}

            <div class="display-4 mt-5"><b>{{header}}</b></div>

            <div class="col-8">
                <div class="row">

                    {{#with contacts_data}}
                    <div class="display-6 mt-5"><b>{{title}}</b></div>

                    <div class="row">
                        <div class="col-12">
                            <div class="mt-3">
                                {{#each buttons}}
                                {{#if isPrimary}}

                                <button class="btn btn-warning col-4">{{text}}</button>

                                {{/if}}
                                {{#if isOutline}}

                                <button class="btn btn-outline-warning col-4 ms-2">{{text}}</button>

                                {{/if}}
                                {{/each}}
                            </div>
                        </div>
                    </div>


                    <div class="col-12">
                        <div class="row">
                            {{#with form}}
                            {{#each input}}

                            <div class="col-6">
                                <div>
                                    <label class="form-label">{{label}}</label>
                                    <input class="form-control" placeholder={{placeholder}}>
                                    <div class="form-text">{{caption}}</div>
                                </div>
                            </div>
                            {{/each}}


                            <div>
                                <hr class="my-4">
                            </div>
                            {{#each switch}}
                            <div class="col-12">
                                <div class="form-check form-switch form-select-lg">
                                    <label class="form-check-label">{{text}}</label>
                                    {{#if isActive}}
                                    <input name="buy" type="checkbox" class="form-check-input" checked>
                                    {{else}}
                                    <input name="buy" type="checkbox" class="form-check-input">
                                    {{/if}}
                                </div>
                            </div>
                            {{/each}}
                            <div>
                                <hr class="my-4">
                            </div>
                            {{/with}}
                        </div>
                    </div>
                    {{/with}}

                    {{#with delivery}}
                    <div class="display-6"><b>{{title}}</b></div>
                    <div class="card col-12 p-2 mt-3">
                        <div class="row">
                            {{#each select}}
                            <div class="col-6">
                                <label class="form-label">{{label}}</label>
                                <select class="form-select">
                                    <option selected>{{placeholder}}</option>
                                    {{#each options}}
                                    <option value={{value}}>{{text}}</option>
                                    {{/each}}
                                </select>
                            </div>
                            {{/each}}
                        </div>
                    </div>

                    {{#each delivery_type}}
                    <div class="col-12 mt-3 ps-0">
                        <div class="form-check">
                            {{#if @first}}
                            <label class="form-check-label">{{type}}</label>
                            <input name="del" type="radio" class="form-check-input" checked>
                            {{else}}
                            <label class="form-check-label">{{type}}</label>
                            <input name="del" type="radio" class="form-check-input">
                            {{/if}}
                        </div>
                    </div>
                    {{/each}}
                    <hr class="my-4">
                    {{#with payment}}
                    <div class="display-6"><b>{{title}}</b></div>
                    {{#each list}}
                    <div class="col-12 mt-3 ps-0">
                        <div class="form-check">
                            {{#if @first}}
                            <label class="form-check-label">{{type}}</label>
                            <input name="pay" type="radio" class="form-check-input" checked>
                            <div class="form-text">{{description}}</div>
                            {{else}}
                            <label class="form-check-label">{{type}}</label>
                            <input name="pay" type="radio" class="form-check-input">
                            <div class="form-text">{{description}}</div>
                            {{/if}}
                        </div>
                    </div>
                    {{/each}}

                    {{/with}}

                    <hr class="my-4">

                    <div class="col-12">
                        <div class="row">
                            {{#each contact}}

                            {{#if @first}}
                            <div class="display-6 m-2"><b>{{this}}</b></div>
                            {{else}}
                            <div class="col-6 g-2">
                                <div>
                                    <label class="form-label">{{label}}</label>
                                    <input class="form-control" placeholder={{placeholder}}>
                                    <div class="form-text">{{caption}}</div>
                                </div>
                            </div>
                            {{/if}}
                            {{/each}}
                        </div>
                    </div>

                    <hr class="my-4">

                    {{#with coment}}
                    <div class="col-12">
                        <div>
                            <label class="form-label">{{label}}</label>
                            <input class="form-control" placeholder="{{placeholder}}">
                        </div>
                    </div>
                    {{/with}}

                    {{/with}}

                    <hr class="my-4">

                    {{#with coupon}}
                    <div class="display-6"><b>{{title}}</b></div>
                    {{#with select}}
                    {{#with availabel_coupon}}
                    <div class="col-12 mt-2">
                        <label class="form-label">{{label}}</label>
                        <select class="form-select form-select-lg">
                            <option selected>{{placeholder}}</option>
                            {{#each options}}
                            <option value={{value}}>{{text}}</option>
                            {{/each}}
                        </select>
                    </div>
                    {{/with}}
                    {{#with friend_coupon}}
                    <div class="col-12 mt-2">
                        <label class="form-label">{{label}}</label>
                        <select class="form-select form-select-sm">
                            <option selected>{{placeholder}}</option>
                            {{#each options}}
                            <option value={{value}}>{{text}}</option>
                            {{/each}}
                        </select>
                    </div>
                    {{/with}}
                    {{/with}}
                    {{#with add}}
                    {{#with friend}}
                    <div class="col-12 mt-2">
                        <div>
                            <label class="form-label">{{label}}</label>
                            <input class="form-control form-control-lg" placeholder="{{placeholder}}">
                            <div class="form-text">{{caption}}</div>
                        </div>
                    </div>
                    {{/with}}
                    {{#with colleague}}
                    <div class="col-12 mt-2">
                        <div>
                            <label class="form-label">{{label}}</label>
                            <input class="form-control form-control-sm" placeholder="{{placeholder}}">
                            <div class="form-text">{{caption}}</div>
                        </div>
                    </div>
                    {{/with}}
                    {{/with}}
                    {{/with}}

                    <hr class="my-4">

                    {{#with quiz}}
                    <h2>{{title}}</h2>
                    {{#with preference}}


                    <div class="form-label">{{title}}</div>
                    {{#each options}}
                    {{#if @first}}
                    <div class="form-check ">
                        <label class="form-check-label">{{this}}</label>
                        <input name="pc" type="radio" class="form-check-input" checked>
                    </div>
                    {{else}}
                    <div class="form-check ">
                        <label class="form-check-label">{{this}}</label>
                        <input name="pc" type="radio" class="form-check-input">
                    </div>
                    {{/if}}
                    {{/each}}
                    {{/with}}
                    {{#with your_expirience}}
                    <div class="col-12 mt-2">
                        <div>
                            <label class="form-label">{{label}}</label>
                            <input class="form-control form-control-lg form-control-sm">
                        </div>
                    </div>
                    {{/with}}
                    {{#with purchase_frequency}}
                    <div class="col-12 mt-2">
                        <label class="form-label ">{{label}}</label>
                        <select class="form-select form-select-lg">
                            <option selected>{{placeholder}}</option>
                            {{#each options}}
                            <option value={{value}}>{{text}}</option>
                            {{/each}}
                        </select>
                    </div>
                    {{/with}}
                    {{#with factors}}
                    <div class="col-12 mt-2">
                        <div class="form-label">{{title}}</div>
                        {{#each options}}
                        {{#if @first}}
                        <div class="form-check ">
                            <label class="form-check-label">{{this}}</label>
                            <input name="like" type="checkbox" class="form-check-input" checked>
                        </div>
                        {{else}}
                        <div class="form-check ">
                            <label class="form-check-label">{{this}}</label>
                            <input name="like" type="checkbox" class="form-check-input">
                        </div>
                        {{/if}}
                        {{/each}}
                    </div>
                    {{/with}}
                    {{/with}}
                </div>
            </div>

            <div class="col-4">
                <div class="row">
                    <div class="card p-2 mt-5 ms-3">
                        {{#each action_block}}

                        {{#if isSuccess}}

                        <button class="btn btn-success col-9">{{text}}</button>

                        {{/if}}
                        {{#if isDanger}}

                        <button class="btn btn-danger my-2 col-5">{{text}}</button>

                        {{/if}}
                        {{#if isInfo}}

                        <button class="btn btn-info col-6">{{text}}</button>

                        {{/if}}

                        {{/each}}
                    </div>

                    <div class="card p-2 mt-3 ms-3">
                        {{#with total}}
                        <div class="card-header ps-0">
                            <div class="card-title display-6"><b>{{title}}</b></div>
                            {{#each item_list}}
                            <p>{{name}}: {{price}}</p>
                            {{/each}}
                        </div>
                        <div>
                            {{#each additional_info}}
                            <p>{{text}}: {{value}}</p>
                            {{/each}}
                        </div>
                        <hr class="my-0">
                        <div>
                            {{#with total_price}}
                            <p>{{text}}: {{value}}</p>
                            {{/with}}
                        </div>
                        <div class="card-footer ps-0">
                            {{#each button}}
                            {{#if isPrimary}}
                            <button class="btn btn-primary col-10">{{text}}</button>
                            {{/if}}
                            {{#if isOutline}}
                            <button class="btn btn-outline-primary col-8  mt-3">{{text}}</button>
                            {{/if}}
                            {{/each}}
                        </div>
                        {{/with}}
                    </div>
                </div>
            </div>


            <hr class="my-4">
            {{>shopfooter}}
        </div>
    </div>
</main>