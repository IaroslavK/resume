{{!-- text-uppercase --}}
<br>

<head>
    {{#with page_header}}
    <h1 class="text-center">{{title}}</h1>
    <p class="text-center text-uppercase">{{description}}</p>
    {{/with}}
</head>

<body>
    {{#with section}}
    <div class="card">
        {{#with about_us}}
        <div class="card-body">
            {{#with title_list}}
            <p class="display-6 text-end">{{main}}</p>
            <h2 class="text-end">{{sub}}</h2>
            {{/with}}
            {{#with button}}
            <button class="btn btn-outline-primary">{{text}}</button>
            {{/with}}
        </div>
        {{/with}}
    </div>
    <br>
    {{#with advantage}}
    <div class="card">
        <div class="card-body">
            <div class="display-5 text-muted">{{title}}</div>
            <div class="card">
                {{#with efficiency}}
                <div class="card-body">
                    <div class="display-4 text-muted">{{title}}</div>
                    <div class="display-6">{{sub_title}}</div>
                    <p class="text-muted">{{description}}</p>
                    <button class="btn btn-outline-warning">{{button}}</button>
                </div>
                {{/with}}
            </div>
            <br>
            <div class="card">
                {{#with innovation}}
                <div class="card-body">
                    <div class="display-4 text-center text-muted">{{title}}</div>
                    <div class="display-6 text-center">{{sub_title}}</div>
                    <p class="text-center text-muted">{{description}}</p>
                    <button class="btn btn-outline-warning">{{button}}</button>
                </div>
                {{/with}}
            </div>
            <br>
            <div class="card">
                {{#with collaboration}}
                <div class="card-body">
                    <div class="display-4 text-end text-muted">{{title}}</div>
                    <div class="display-6 text-end">{{sub_title}}</div>
                    <p class="text-end text-muted">{{description}}</p>
                    <button class="btn btn-outline-warning">{{button}}</button>
                </div>
                {{/with}}
            </div>
        </div>
    </div>
    {{/with}}

    <br>
    {{#with agreement}}
    <div class="card">
        <div class="display-5 text-center">{{title}}</div>
        <div class="card-body">
            {{#with info}}
            <div class="card">
                <h5>{{sub_title}}</h5>
                <div class="card-body">
                    {{#with detail}}
                    <div class="card">
                        <div class="card-body">
                            <p>{{text}}</p>
                            <button class="btn btn-success">{{button}}</button>
                        </div>
                    </div>
                    {{/with}}
                </div>
            </div>
            {{/with}}
            {{/with}}
            {{/with}}
</body>
<br>

