{{!--
Це код container файлу для summary сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}
<div class="col-12">
    <div class="row">
        {{#with main}}
        <main>
            <section>
                {{>title data="My educations" big=true }}
                <ul class="ms-5">
                    {{#each education}}
                    <li>
                        {{name}}

                        {{#if isEnd}}
                        {{else}}
                        (ще в процесі)
                        {{/if}}
                    </li>
                    {{/each}}
                </ul>
            </section>
            <section>
                {{>title data="My certificates" }}
                <ul class="ms-5">
                    {{#each certificates}}
                    <li>
                        {{name}} ({{id}})
                    </li>
                    {{/each}}
                </ul>
            </section>
        </main>
        {{/with}}
    </div>
</div>
