<main class="p-5">
    <div class="col-12">
        <div class="row">
            <div class="col-12">
                {{>shopheader}}
                {{#with header}}
                <div class="display-6 mt-5 mb-3"><b>{{title}}</b></div>
                <div class="col-3">
                    {{#with button}}
                    <a href={{link}} class="btn btn-outline-dark">{{text}}</a>
                    {{/with}}
                </div>
                {{/with}}
            </div>

            <hr class="my-5">

            <div class="col-12">
                {{#each goodsBlock}}
                <div class="card my-4">
                    <div class="col-12">
                        <div class="row">
                            <div class="col-2 ps-4 pt-4 pb-0">
                                <img src={{image}} alt="goodsBlock">
                            </div>
                            <div class="col-4 ps-0 my-4">
                                <h5>{{name}}</h5>
                                <p>{{description}}</p>
                            </div>
                            <div class="text-center col-2 mt-5">
                                {{#with price}}
                                <p>{{title}}:</p>
                                <p><b>{{value}}</b></p>
                                {{/with}}
                            </div>
                            <div class="text-center col-2 mt-4">
                                <p class="mt-5">{{amount}}</p>
                            </div>
                            <div class="col-2">
                                {{#each buttons}}
                                {{#if isPrimary}}
                                <button class="btn btn-primary mt-4">{{text}}</button>
                                {{/if}}
                                {{#if isDanger}}
                                <button class="btn btn-outline-danger mt-4">{{text}}</button>
                                {{/if}}
                                {{/each}}
                            </div>

                        </div>
                    </div>
                </div>
                {{/each}}
            </div>

            <hr class="my-5">

            <div class="col-12">
                {{#with total}}
                <h4>{{title}}</h4>
                <div class="display-6"><b>{{amount}}</b></div>
                <p>{{delivery}}</p>
                {{#each buttons}}
                <div class="col-12 mt-1">
                    {{#if isSuccess}}
                    <a href={{link}} class="btn btn-success col-3">{{text}}</a>
                    {{/if}}
                </div>
                <div class="col-12 mt-3">
                    {{#if isOutline}}
                    <a href={{link}} class="btn btn-outline-success col-32">{{text}}</a>
                    {{/if}}
                </div>
                {{/each}}
                {{/with}}
            </div>

            <hr class="my-5">

            {{#with goodsOtherBlock}}
            <div class="col-12">
                <div class="row">
                    <div class="display-6 text-center mb-3">{{title}}</div>
                    {{>shopcard}}
                </div>
            </div>
            {{/with}}

            <hr class="my-3">

            {{>subscribe}}

            <hr class="m-3">

            {{>shopfooter}}

        </div>
    </div>
</main>