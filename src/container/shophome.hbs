<main class="p-5">
    <div class="row">
        {{>shopheader}}

        <div class="col-12 mt-5">
            {{#with newsBlock}}
            {{>shoppost}}
            {{/with}}
        </div>

        <hr class="m-3">
        {{#with goodsBlock}}
        <div class="col-12 my-5">
            <div class="nav nav-tabs">
                {{#each tabs}}
                <div class="nav-item">
                    {{#if isActive}}
                    <a href="#" class="nav-link active">{{text}}</a>
                    {{else isDisabled}}
                    <a href="#" class="nav-link disabled">{{text}}</a>
                    {{else}}
                    <a href="#" class="nav-link">{{text}}</a>
                    {{/if}}
                </div>
                {{/each}}
            </div>
        </div>


        <div class="col-12">
            <div class="row">
                {{>shopcard}}
            </div>
        </div>
        {{/with}}


        <hr class="m-3">


        <div class="col-12 my-5">
            {{#with subscribe}}
            <div class="card text-bg-dark">
                <h2 class="mb-2">{{header}}</h2>
                <p>{{description}}</p>
                {{#each buttons}}
                <a href={{link}} class="btn btn-primary col-3 ms-2 mb-2">{{text}}</a>
                {{/each}}
            </div>
            {{/with}}
        </div>
        {{>shopaction}}
        <hr class="m-3">
        {{>shopfooter}}

    </div>
</main>