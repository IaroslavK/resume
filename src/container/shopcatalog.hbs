<main class="p-5">
    <div class="col-12">
        <div class="row">
            {{>shopheader}}
            {{>breadcrumb}}
            <h1 class="mb-4">{{header}}</h1>

            <div class="col-12 mb-5">
                <div class="row">
                    {{#each sortBlock}}
                    <div class="col-3">
                        <select class="form-select form-select">
                            <option selected>{{placeholder}}</option>
                            {{#each options}}
                            <option value={{value}}>{{text}}</option>
                            {{/each}}
                        </select>
                    </div>
                    {{/each}}
                </div>
            </div>
            {{#with filterBlock}}
            <div class="col-4">
                <div class="card p-2">
                    {{#with sellers}}
                    <div class="col-12">
                        <div class="form-label">{{title}}</div>
                        {{#each list}}
                        <div class="form-check ">
                            <label class="form-check-label">{{value}}</label>
                            <input name="sellers" type="checkbox" class="form-check-input">
                        </div>
                        {{/each}}
                    </div>
                    {{/with}}
                    <hr>
                    {{#with brands}}
                    <div class="col-12">
                        <div class="form-label">{{title}}</div>
                        {{#with input}}
                        <input class="mb-2 form-control" type="search" placeholder="{{placeholder}}">
                        {{/with}}
                        {{#each options}}
                        <div class="form-check ">
                            <label class="form-check-label">{{value}}</label>
                            <input name="sellers" type="checkbox" class="form-check-input">
                        </div>
                        {{/each}}
                    </div>
                    {{/with}}
                    <hr>
                    {{#with price}}
                    <div class="col-12">
                        <div class="form-label">{{title}}</div>
                        {{#each range}}
                        <input class=" mt-3 form-control" placeholder="{{this}}">
                        {{/each}}
                    </div>

                    {{#with button}}
                    <a href={{link}} class="mt-3 col-3 btn btn-outline-secondary">{{text}}</a>
                    {{/with}}
                    {{/with}}

                    {{#each filterList}}
                    <hr>
                    <div class="col-12">
                        <div class="form-label">{{title}}</div>
                        {{#each options}}
                        <div class="form-check ">
                            <label class="form-check-label">{{value}}</label>
                            <input name="filterList" type="checkbox" class="form-check-input">
                        </div>
                        {{/each}}
                    </div>
                    {{/each}}
                </div>
            </div>
            {{/with}}

            <div class="col-8 px-0">
                <div class="row">
                    {{>catalogItem}}
                </div>
            </div>

            {{>shopaction}}
            <hr class=" mb-3">
            {{>shopfooter}}
        </div>
    </div>
</main>