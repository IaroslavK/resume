{{#each goodsBlock}}
<div class="card my-4">
    <div class="col-12">
        <div class="row">
            <div class="col-2 ps-4 pt-4 pb-0">
                <img src={{image}} alt="goodsBlock">
            </div>
            <div class="col-4 ps-0 my-4">
                <h5>{{name}}</h5>
                <p>{{description}}</p>
            </div>
            <div class="text-center col-2 mt-5">
                {{#with price}}
                <p>{{title}}:</p>
                <p><b>{{value}}</b></p>
                {{/with}}
            </div>
            <div class="text-center col-2 mt-4">
                <p class="mt-5">{{amount}}</p>
            </div>
            <div class="col-2">
                {{#each buttons}}
                {{#if isPrimary}}
                <button class="btn btn-primary mt-4">{{text}}</button>
                {{/if}}
                {{#if isDanger}}
                <button class="btn btn-outline-danger mt-4">{{text}}</button>
                {{/if}}
                {{/each}}
            </div>

        </div>
    </div>
</div>
{{/each}}