<div class="col-12">
    <div class="row">
        <div class="col-4">
            <p>{{number}}</p>
            <p><b>{{status}}</b></p>
        </div>
        <div class="text-center col-2 mt-2">
            {{#with amount}}
            <p>{{title}}:</p>
            <p><b>{{value}}</b></p>
            {{/with}}
        </div>

        <div class="col-4">
            <div class="col-12">
                <div class="row">
                    {{#each images}}
                    <div class="col-4 px-1">
                        <div class="card ">
                            <img src={{this}}>
                        </div>
                    </div>
                    {{/each}}
                </div>
            </div>
        </div>
        <div class="col-2 mt-4">
            <div class="col-12 mx-1">
                <div class="row">
                    {{#with button}}
                    {{#if isPrimary}}
                    <a href={{link}} class="btn btn-primary">{{text}}</a>
                    {{/if}}
                    {{/with}}
                </div>
            </div>
        </div>
    </div>
</div>