{{#each cards}}
<div class="col-4">
    <div class="card mb-3">
        <img class="card-img-top" src={{image}} alt="Product img">
        <div class="card-title">
            <p class="pt-3 ps-3">{{title}}
                {{#if isHot}}<span class="badge text-bg-warning rounded-pill">
                    HOT!</span>{{/if}}
                {{#if isNew}}<span class="badge text-bg-primary rounded-pill">
                    Новая</span>{{/if}}</p>
        </div>
        <div class="card-body pt-0">{{description}}</div>
    </div>
</div>
{{/each}}